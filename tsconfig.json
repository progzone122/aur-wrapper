{
  "compilerOptions": {
    "strict": true,
    "target": "es2015",
    "moduleResolution": "nodenext",
    "module": "NodeNext",
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "lib": ["es2015", "dom"],
    "outDir": "dist"
  },
  "include": [
    "src/types/*.ts",
    "src/schemas/*.ts",
    "src/rpc.ts",
    "src/rss.ts",
    "index.ts"
  ],
  "exclude": ["node_modules"],
}